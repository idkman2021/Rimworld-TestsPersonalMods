<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- common - 1+ -->

  <TraitDef>
    <defName>TTraits_BadFighter</defName>
    <degreeDatas>
      <li>
        <label>clumsy fighter</label>
        <description>{PAWN_nameDef} doesn't like to fight up close and personal. {PAWN_possessive} accuracy is greatly decreased in melee combat.</description>
        <statOffsets>
          <MeleeHitChance>-3</MeleeHitChance>
        </statOffsets>
        <skillGains>
          <li>
            <key>Melee</key>
            <value>-4</value>
          </li>
        </skillGains>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Brawler</li>
    </conflictingTraits>
    <commonality>1</commonality>
  </TraitDef>

  <TraitDef>
    <defName>TTraitsFragile</defName>
    <degreeDatas>
      <li>
        <label>fragile</label>
        <description>{PAWN_nameDef} has thin skin, light flesh, and brittle bones. {PAWN_pronoun} takes much more damage than other people from the same blows. {PAWN_pronoun} is very easy to kill.</description>
        <statFactors>
          <IncomingDamageFactor>2</IncomingDamageFactor>
        </statFactors>
      </li>
    </degreeDatas>
    <commonality>1</commonality>
  </TraitDef>

  <TraitDef>
    <defName>TTraitsBadShooting</defName>
    <commonality>1</commonality>
    <degreeDatas>
      <li>
        <label>clumsy shooter</label>
        <description>[PAWN_nameDef] takes more time to aim when shooting and still shoots with less accuracy.</description>
        <statOffsets>
          <AimingDelayFactor>0.25</AimingDelayFactor>
          <ShootingAccuracyPawn>-5</ShootingAccuracyPawn>
        </statOffsets>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Brawler</li>
    </conflictingTraits>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
  </TraitDef>

  <!-- uncommon - 0.5 - 0.9 -->

  <TraitDef>
    <defName>TTraitsSpeed</defName>
    <commonality>0.5</commonality>
    <degreeDatas>
      <li>
        <label>very slow</label>
        <description>[PAWN_nameDef] is really unable to walk nearly as fast as most people.</description>
        <statOffsets>
          <MoveSpeed>-0.8</MoveSpeed>
        </statOffsets>
        <disallowedInspirations>
          <li>Frenzy_Go</li>
        </disallowedInspirations>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>SpeedOffset</li>
    </conflictingTraits>
  </TraitDef>


  <TraitDef>
    <defName>TTraitsWork</defName>
    <commonality>0.5</commonality>
    <degreeDatas>
      <li>
        <label>idle</label>
        <description>[PAWN_nameDef] really hates work. [PAWN_pronoun] is unable to stay focused on a task.</description>
        <statOffsets>
          <WorkSpeedGlobal>-0.5</WorkSpeedGlobal>
        </statOffsets>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Industriousness</li>
    </conflictingTraits>
  </TraitDef>

  <!-- rare - 0.2 - 0.4 -->

  <TraitDef>
    <defName>TTraits_Unstable</defName>
    <degreeDatas>
      <li>
        <label>unstable</label>
        <description>{PAWN_nameDef} is extremely unstable and suffers from constant mental breaks.</description>
        <statOffsets>
          <MentalBreakThreshold>0.5</MentalBreakThreshold>
        </statOffsets>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Nerves</li>
    </conflictingTraits>
    <commonality>0.4</commonality>
  </TraitDef>

  <TraitDef>
    <defName>TTraits_Algophobia</defName>
    <allowOnHostileSpawn>false</allowOnHostileSpawn>
    <degreeDatas>
      <li>
        <label>algophobia</label>
        <description>{PAWN_nameDef} extremely afraid of pain. Any pain will render {PAWN_objective} immobilized in terror.</description>
        <statOffsets>
          <PainShockThreshold>-0.7</PainShockThreshold>
        </statOffsets>
        <statFactors>
          <CertaintyLossFactor MayRequire="Ludeon.RimWorld.Ideology">3</CertaintyLossFactor>
        </statFactors>
        <marketValueFactorOffset>-0.45</marketValueFactorOffset>
      </li>
    </degreeDatas>
    <commonality>0.2</commonality>
    <conflictingTraits>
      <li>Brawler</li>
      <li>Masochist</li>
    </conflictingTraits>
  </TraitDef>

  <TraitDef>
    <defName>TTraits_NonLearner</defName>
    <exclusionTags>
      <li>SlowFastLearner</li>
    </exclusionTags>
    <degreeDatas>
      <li>
        <label>non-learner</label>
        <description>{PAWN_nameDef} seems to have completely no learning capacity. {PAWN_pronoun} is unable to learn new skills.</description>
        <statOffsets>
          <GlobalLearningFactor>-1</GlobalLearningFactor>
        </statOffsets>
        <statFactors>
          <CertaintyLossFactor MayRequire="Ludeon.RimWorld.Ideology">0.1</CertaintyLossFactor>
        </statFactors>
      </li>
    </degreeDatas>
    <commonality>0.2</commonality>
    <conflictingTraits>
      <li>TooSmart</li>
    </conflictingTraits>
  </TraitDef>

  <TraitDef>
    <defName>TTraitsHypersomnia</defName>
    <degreeDatas>
      <li>
        <label>hypersomnia</label>
        <description>{PAWN_nameDef} needs more sleep then the average person. {PAWN_pronoun} will spend a significant amount of their life in sleep.</description>
        <statOffsets>
          <RestRateMultiplier>-0.5</RestRateMultiplier>
        </statOffsets>
      </li>
    </degreeDatas>
    <commonality>0.3</commonality>
    <conflictingTraits>
      <li>QuickSleeper</li>
    </conflictingTraits>
  </TraitDef>


  <TraitDef>
    <defName>TTraitsSpoiled</defName>
    <commonality>0.3</commonality>
    <degreeDatas>
      <li>
        <label>extremely spoiled</label>
        <description>{PAWN_nameDef} never had to do any work in their life. {PAWN_pronoun} refuses to do any reasonable amounts of work.</description>
        <statOffsets>
          <WorkSpeedGlobal>-0.9</WorkSpeedGlobal>
        </statOffsets>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Industriousness</li>
    </conflictingTraits>
  </TraitDef>

  <!-- very rare - 0.1 -->

  <TraitDef>
    <defName>TTraitsImmunodeficiency</defName>
    <degreeDatas>
      <li>
        <label>immunodeficiency</label>
        <description>[PAWN_nameDef] has a broken immune system. [PAWN_pronoun] is unable to survive without extensive medical care as thir body refuses to fight infections.</description>
        <randomDiseaseMtbDays>10</randomDiseaseMtbDays>
        <statOffsets>
          <ImmunityGainSpeed>-0.60</ImmunityGainSpeed>
        </statOffsets>
      </li>
    </degreeDatas>
    <commonality>0.1</commonality>
  </TraitDef>

  <!-- extremely rare - <0.1 -->


</Defs>