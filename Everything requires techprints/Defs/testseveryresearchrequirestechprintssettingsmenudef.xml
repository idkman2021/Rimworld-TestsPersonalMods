<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <XmlExtensions.SettingsMenuDef>
        <defName>tests_ERRTSettings</defName> <!--Can be anything unique with no periods-->
        <modId>tests.ERRT</modId> <!--MUST be the same as the one entered earlier-->
        <label>Every research requires techprints</label> <!-- This is what displays as your mod's name-->
        <settings>
            <li Class="XmlExtensions.Setting.Text">
                <text>Settings apply after restart.</text>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>tests_ERRTEnable</key>
                <label>Enable mod</label>
                <defaultValue>true</defaultValue>
                <tooltip>This mod will do nothing if this is disabled.</tooltip>
            </li>
            <!--<li Class="XmlExtensions.Setting.Text">
                <text>All settings are safe to have enabled even if you don't have the appropriate mods.</text>
            </li>-->
            <li Class="XmlExtensions.Setting.GapLine" />


            <li Class="XmlExtensions.Setting.Slider">
                <key>ERR_TPAmount</key>
                <defaultValue>1</defaultValue>
                <min>1</min>
                <max>20</max>
                <decimals>0</decimals>
                <label>Amount of techprints required for each research: {ERR_TPAmount} (default=1)</label>
            </li>
            <li Class="XmlExtensions.Setting.Slider">
                <key>ERR_TPCommonality</key>
                <defaultValue>5</defaultValue>
                <min>1</min>
                <max>20</max>
                <decimals>0</decimals>
                <label>Techprints commonality: {ERR_TPCommonality} (default=5)</label>
            </li>
            <li Class="XmlExtensions.Setting.IntEntry">
                <key>ERR_TPValue</key>
                <defaultValue>200</defaultValue>
                <multiplier>10</multiplier>
                <min>0</min>
            </li>

            <li Class="XmlExtensions.Setting.GapLine" />
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>tests_ERRTCostBased</key>
                <label>Amount of techprints is based on research cost</label>
                <defaultValue>false</defaultValue>
                <tooltip>Default = OFF
                    
The costlier the research is, the more techprints it will require. Customizeable.</tooltip>
            </li>
            <li Class="XmlExtensions.Setting.ToggleableSettings">
                <key></key>
                <caseTrue>
                    <li Class="XmlExtensions.Setting.Slider">
                        <key>ERR_CBValue</key>
                        <defaultValue>1000</defaultValue>
                        <min>1</min>
                        <max>1000000</max>
                        <decimals>0</decimals>
                        <label>Research cost per tech print: {ERR_TPValue} (default=1000)</label>
                    </li>
                </caseTrue>
                <caseFalse>
                    
                </caseFalse>
            </li>

            <li Class="XmlExtensions.Setting.GapLine" />
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>tests_ERRTReplaceExisting</key>
                <label>Affect projects that already have techprint requirements</label>
                <defaultValue>false</defaultValue>
                <tooltip>Default = OFF
                    
Replaces existing techprint requirement values (techprint amount, commonality and cost) with ones generated by this mod</tooltip>
            </li>


        </settings>
    </XmlExtensions.SettingsMenuDef>
</Defs>